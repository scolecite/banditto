{
  "name": "Loot Font",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Yarr Harr Fiddle Dee Dee",
  "permissions": [
    "contextMenus", 		
    "tabs",
		"http://*/",
    "https://*/",
		"*://*/*",
		"downloads",
		"downloads.shelf"
   ],
  "background": { 
    "scripts": ["background.js"]
  },
  "devtools_page": "devtools.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ]
}
